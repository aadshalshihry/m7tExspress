<% include ../partials/header.ejs %>

<div class="container">
    <% include ../partials/flash.ejs%>
    <h1>Page <%= title %></h1>

    <hr>
    <div>
        <a href="create">
            <button class="btn btn-primary">
                Add Compnay
            </button>
        </a>
    </div>

    <br>

    <table class="table table-dark">
        <thead>
        <tr>
            <th scope="col">#</th>
            <th scope="col">Name</th>
            <th scope="col">Email</th>
            <th scope="col">logo</th>
            <th scope="col">Rate</th>
            <th scope="col">Best Chain</th>
            <th scope="col">Stars</th>
            <th scope="col">Opt</th>
        </tr>
        </thead>
        <tbody>
        <% if (companies.length === 0) { %>
            <tr>
                <th>No company</th>
            </tr>
        <% } else { %>
            <% companies.forEach((company, index) => { %>
                <tr>
                    <th scope="row"><%= index %></th>
                    <td><%= company.name %></td>
                    <td><%= company.email %></td>
                    <td><%= company.logo %></td>
                    <td><%= company.overall_rate %></td>
                    <td><%= company.best_chain %></td>
                    <td><%= company.stars %></td>
                    <td>
                        <span>
                            <a href="/company/show/<%= company.slug %>">a</a>
                        </span>
                    </td>
                </tr>
            <% }); %>
        <% }%>
        </tbody>
    </table>

</div>

<% include ../partials/footer.ejs%>
